<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/org.void1898.www.mixedcolor"
	android:background="@drawable/menu_bg" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingTop="5dip">
	<LinearLayout android:orientation="vertical"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:layout_gravity="center">
		<ImageView android:layout_width="fill_parent"
			android:layout_height="150dip" android:scaleType="center"
			android:src="@drawable/game_logo" />
		<LinearLayout android:orientation="vertical"
			android:layout_height="wrap_content" 
			android:layout_width="fill_parent"
			android:layout_gravity="center">
			<Button android:id="@+id/start_game" 
				android:layout_width="193dip"
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:text="@string/start_game" 
				android:textColor="#FF292066"
				android:textSize="17sp" 
				android:padding="8dip" 
				android:background="@drawable/button_style1"
				android:layout_marginBottom="3dip" />
			<Button android:id="@+id/score_board"
				android:layout_width="193dip"
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:text="@string/score_board" 
				android:textColor="#FF292066"
				android:textSize="17sp" 
				android:padding="8dip" 
				android:background="@drawable/button_style2"
				android:layout_marginBottom="3dip" />
			<Button android:id="@+id/options" 
				android:layout_width="193dip"
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:text="@string/options" 
				android:textColor="#FF292066"
				android:textSize="17sp" 
				android:padding="8dip" 
				android:background="@drawable/button_style3"
				android:layout_marginBottom="3dip" />
			<Button android:id="@+id/exit" 
				android:layout_width="193dip"
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:text="@string/exit" 
				android:textColor="#FF292066"
				android:textSize="17sp" 
				android:padding="8dip" 
				android:background="@drawable/button_style5"
				android:layout_marginBottom="3dip" />
		</LinearLayout>
	</LinearLayout>
</FrameLayout>