<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1"
	android:versionName="1.0.0" package="dev.game.molegame">
	<application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true" >
		<activity android:name=".MainMenuActivity"
			android:label="@string/app_name" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".MoleGameActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name=".Preferences" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="stateHidden|adjustResize">
		</activity>
		<activity android:name=".RankingActivity"
			android:label="@string/global_ranking" android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation">
		</activity>
		<activity android:name=".ChooseLevelActivity"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation"
			android:windowSoftInputMode="stateHidden|adjustResize">
		</activity>


		<service android:name="dev.game.molegame.RecordUpdateService">
		</service>
		<!-- The application's publisher ID assigned by AdMob -->
		<meta-data android:value="a14bade2530b75f" android:name="ADMOB_PUBLISHER_ID" />
	</application>

	<uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>
	<!-- AdMob SDK permissions -->
	<uses-permission android:name="android.permission.INTERNET" />
</manifest> 